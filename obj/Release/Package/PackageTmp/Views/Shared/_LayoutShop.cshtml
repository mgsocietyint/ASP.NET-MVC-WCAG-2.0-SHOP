@using Microsoft.AspNet.Identity

@{
    Layout = null;
}

<!doctype html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="author" content="Mariusz Grzybowski" />
    <meta name="description" content="Produkty i pomoce dla osób niepełnosprawnych, szkolenia oraz audyty dostępności" />
    <meta name="keywords" content="niepełnosprawni, niewidomi, słabowidzący, głuchoniewidomi, wyroby medyczne, szkolenie, audyt, dostępność, wcag, sklep, brajl, tyflografika, drukarnia" />
    <title>@ViewBag.Title</title>
    @*<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/global.min.css" />
    <link rel="alternate stylesheet" type="text/css" media="screen" href="~/Content/global-wb-contrast.min.css" title="wb-contrast" />
    <link rel="alternate stylesheet" type="text/css" media="screen" href="~/Content/global-bw-contrast.min.css" title="bw-contrast" />
    <link rel="alternate stylesheet" type="text/css" media="screen" href="~/Content/global-yb-contrast.min.css" title="yb-contrast" />
    <link rel="alternate stylesheet" type="text/css" media="screen" href="~/Content/global-by-contrast.min.css" title="by-contrast" />
    <script src="~/Scripts/styleswitch.js" type="text/javascript">/*********************************************** * Style Sheet Switcher v1.1- (c) Dynamic Drive DHTML code library (www.dynamicdrive.com) * Please keep this notice intact * Visit Dynamic Drive at http://www.dynamicdrive.com/ for this script and 100s more ***********************************************/</script>

</head>
<body id="body">
    <ul class="section-selection text-center">
        <li><a href="@Url.Action("Index", "Home")">Przejdź do strony głównej</a></li>
        <li><a href="@Url.Action("Index", "Shop")">Przejdź do sklepu</a></li>
        <li><a href="#content">Przejdź do treści</a></li>
        <li><a href="#footer">Przejdź do stopki</a></li>
    </ul>
    <!-- Navbar logo/settings-->
    <div class="sticky-bar sticky-top">
        <header class="navbar header-navbar pb-1 pt-1">
            <div class="header-container container-fluid container-lg">
                <div class="row top-bar">
                    <!--tutaj zmienić-->
                    <div class="col-sm-12 col-md-2 col-lg-2 d-flex align-items-center justify-content-center justify-content-md-start logo pl-3">
                        <a href="@Url.Action("Index", "Home")" class="navbar-brand font-weight-bold">Disabled<span class="logo-dot">.</span></a>
                    </div>
                    <div class="col-sm-12 col-md-2 col-lg-2 text-left d-flex align-items-center justify-content-center justify-content-md-start pl-3">
                        <ul class="font-size-list list-unstyled list-inline mb-0">
                            <li class="list-inline-item"><p class="sm-font" id="small-font">A</p><span class="sr-only">Mała czcionka</span></li>
                            <li class="list-inline-item"><p class="md-font" id="normal-font">A</p><span class="sr-only">Średnia czcionka</span></li>
                            <li class="list-inline-item"><p class="lg-font" id="big-font">A</p><span class="sr-only">Duża czcionka</span></li>
                            @*<li class="list-inline-item"><a href="#" class="xl-font text-dark" id="huge-font">A</a></li>*@
                            @*<li class="list-inline-item"><a href="@Url.Action("AddProduct", "Manage")" class="xl-font text-dark" id="testo4">A</a></li>*@
                        </ul>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-3 d-flex align-items-center justify-content-center justify-content-md-start pl-3">
                        <ul class="contrast-list list-unstyled list-inline mb-0 d-flex align-items-center">
                            <li class="list-inline-item st-contrast"><a href="javascript:chooseStyle('none', 60)" checked="checked">A</a></li>
                            <li class="list-inline-item wb-contrast"><a href="javascript:chooseStyle('wb-contrast', 60)" class="wb-contrast" id="wb-contrast">A</a></li>
                            <li class="list-inline-item bw-contrast"><a href="javascript:chooseStyle('bw-contrast', 60)" class="bw-contrast" id="bw-contrast">A</a></li>
                            <li class="list-inline-item yb-contrast"><a href="javascript:chooseStyle('yb-contrast', 60)" class="yb-contrast" id="yb-contrast">A</a></li>
                            <li class="list-inline-item by-contrast"><a href="javascript:chooseStyle('by-contrast', 60)" class="by-contrast" id="by-contrast">A</a></li>
                        </ul>
                    </div>
                    @if (Request.IsAuthenticated)
                    {
                        <div class="col-sm-12 col-md-3 col-lg-4 d-flex align-items-md-center justify-content-center justify-content-md-start login-register pl-3">
                            @using (Html.BeginForm("Logoff", "Account", FormMethod.Post, new { id = "logout-form", @class = "manage" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "manage" })
                                <button class="logout-button" tabindex="-1"><a href="javascript:document.getElementById('logout-form').submit()">Wyloguj</a></button>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="col-sm-12 col-md-3 col-lg-3 d-flex align-items-center justify-content-center justify-content-md-start login-register pl-3">
                            <button class="register-button d-flex align-items-center justify-content-center p-0" tabindex="-1">@Html.ActionLink("Rejestracja", "Register", "Account", routeValues: null, htmlAttributes: new { id = "register-link", @class = "align-middle d-flex align-items-center justify-content-center" })</button>
                            <button class="login-button d-flex align-items-center justify-content-center p-0" tabindex="-1">@Html.ActionLink("Logowanie", "Login", "Account", routeValues: null, htmlAttributes: new { id = "login-link", @class = "align-middle d-flex align-items-center justify-content-center" })</button>
                        </div>
                    }
                    <div class="col-sm-12 col-md-1 col-lg-1 d-flex align-items-center justify-content-center justify-content-md-start cart pl-3">
                        <a href="@Url.Action("Index", "Cart")" class="d-flex align-items-center">
                            <i class="fa fa-shopping-cart cart-logo" aria-hidden="true"></i>
                            <span class="cart-count">(@Html.Action("GetCartItemsCount", "Cart"))</span>
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <!--Navbar-->

        <nav class="navbar navbar-expand-md">
            <div class="container nav-container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navContent">
                    <span class="navbar-toggler-icon">
                        <i class="fa fa-navicon"></i>
                    </span>
                </button>
                <div class="collapse navbar-collapse" id="navContent">
                    <div class="navbar-nav mr-auto">
                        <a href="@Url.Action("Index", "Home")" class="nav-item nav-link">Start</a>
                        <a href="@Url.Action("Index", "Shop")" class="nav-item nav-link">Sklep</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="manageLink nav-item nav-link" href="@Url.Action("AddProduct", "Manage")">Dodaj produkt</a>
                            <a class="manageLink nav-item nav-link" href="@Url.Action("OrdersList", "Manage")">Historia zamówień</a>
                        }
                        else if (User.IsInRole("Employee"))
                        {
                            <a class="manageLink nav-item nav-link" href="@Url.Action("OrdersList", "Manage")">Historia zamówień</a>
                        }
                        else
                        {
                            if (Request.IsAuthenticated)
                            {
                                <a class="manageLink nav-item nav-link" href="@Url.Action("OrdersList", "Manage")">Zamówienia</a>
                            }
                        }
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <div id="content">
        @RenderBody()
    </div>

    <footer class="footer" id="footer">
        <div class="container">
            <div class="row d-flex align-items-center">
                <div class="col-12 col-md-4 text-left">
                    <p id="social">Social Media</p>
                    <ul class="list-unstyled list-inline footer-list">
                        <li class="list-inline-item"><a href="https://www.facebook.com/"><i class="fa fa-facebook-square" aria-hidden="true"></i></a></li>
                        <li class="list-inline-item"><a href="https://www.instagram.com/"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                        <li class="list-inline-item"><a href="https://twitter.com"><i class="fa fa-twitter-square" aria-hidden="true"></i></a></li>
                        <li class="list-inline-item"><a href="https://www.youtube.com/"><i class="fa fa-youtube-play" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
                <div class="col-12 col-md-4 text-left">
                    <p>Pomoc</p>
                    <ul class="list-unstyled footer-list">
                        <li><a href="#">Mapa serwisu</a></li>
                        <li><a href="#">Słownik pojęć</a></li>
                    </ul>
                </div>
                <div class="col-12 col-md-4 text-left">
                    <p>Kontakt</p>
                    <ul class="list-unstyled footer-list">
                        <li>
                            <ul class="list-unstyled company-address">
                                <li>Disabled.</li>
                                <li>Kondratowicza 4B/10</li>
                                <li>03-242 Warszawa</li>
                                <li>660-628-665</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/Scripts/fontswitch.js"></script>
</body>
</html>